#!/usr/bin/env bash

file=$1

filename="${file%%.*}"

echo $filename

if [ ! -f $filename ]; then
  tectonic -X compile -Z search-path=$HOME/dotfiles/twemojis $file
fi

evince "${filename}.pdf" &> /dev/null & disown

watchexec -c -i '*.pdf' -- tectonic -X compile -Z search-path=$HOME/dotfiles/twemojis $file
